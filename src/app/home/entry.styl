@import '../styleguide/palette';
@import '../styleguide/typography';

// Box
_box() {
  border-radius: $spacing-base;
  border: 1px solid $black-base;
  box-shadow: $spacing-xxsmall $spacing-xxsmall $spacing-xxsmall $black-base;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  margin: $spacing-small 0;
  overflow: hidden;
  position: relative;
  transition: top .5s ease-out, opacity .5s ease-out;
  width: 100%;

  &[data-removed] { opacity: 0; }

  &:first-child { margin-top: 0; }

  // Just a easter egg üòú
  &:nth-child(odd) { background-color: $red-base; }
  &:nth-child(even) { background-color: $blue-base; }

  &--info {
    color: $white-base;
    padding: $spacing-base;

    .info {
      &__remove-item {
        border-radius: 100%;
        border: 1px solid $black-base;
        color: $black-base;
        font-size: $spacing-small;
        font-weight: 700;
        line-height: $spacing-xxsmall;
        padding: $spacing-small;
        position: absolute;
        right: $spacing-xsmall;
        text-transform: uppercase;
        top: $spacing-xsmall;
        transition: opacity .2s ease-in-out;
      }

      &__title a {
        color: $white-base;
        font-size: $font-size-large;

        &:hover { text-decoration: underline; }
      }

      &__subtitle { font-size: $font-size-small; }

      &__price,
      &__go-to { text-align: right; }

      &__price {
        font-size: $font-size-large;
        font-weight: $font-weight-bold;
      }

      &__go-to {
        color: $white-base;
        display: block;
        font-weight: $font-weight-bold;
        margin: $spacing-small 0 0;
        text-transform: uppercase;
      }
    }
  }

  .box {
    &__img {
      &--itself {
        $size = 200px;

        background-color: $white-base;
        background-position: 50% 50%;
        background-repeat: no-repeat;
        background-size: 70%;
        height: $size;
        width: auto;
      }
    }
  }
}

_box-responsive() {
  &:hover .info__remove-item { opacity: 1; }
  &:hover .info__go-to span { text-decoration: underline; }

  +mq-medium-up() {
    flex-direction: row;

    &--info {
      display: flex;
      flex-direction: column;
      justify-content: space-around;

      .info {
        &__remove-item {
          border: 1px solid $white-base;
          color: $white-base;
          opacity: 0;
          padding: $spacing-xsmall;
          transition: background .2s ease-in-out, opacity .2s ease-in-out;

          &:hover { background: $black-base; }
        }

        &__price,
        &__go-to { text-align: left; }
      }
    }

    .box {
      &__img {
        &--itself {
          $size = 210px;

          width: $size;
        }
      }
    }
  }

  +mq-large-up() {
    max-width: 750px;

    .box {
      &__img {
        &--itself {
          $size = 360px;

          width: $size;
        }
      }
    }
  }
}

// List
_list() {
  &__title { font-size: $font-size-large; }

  &__actions {
    text-align: center;

    button {
      background: $white-base;
      border: 1px solid;
    }
  }

  &__sort {
    $size = 100px;

    background: $gray-base;
    color: $black-base;
    font-weight: $font-weight-bold;
    margin: $spacing-small 0 0;
    position: relative;
    width: $size;
  }

  &__boxes {
    display: flex;
    flex-direction: column;
    margin: $spacing-large 0;
    padding-bottom: $spacing-large;
  }

  &__box {
    _box()
  }
}

_list-responsive() {
  &__box {
    _box-responsive()
  }

  +mq-large-up() {
    &__boxes {
      align-items: center;
      user-select: none;
    }
  }
}

// Home
home() {
  .list {
    _list()
  }
}

home-responsive() {
  .list {
    _list-responsive()
  }
}
